<%- include('partials/header') -%>

  <div class="container">
    <div class="row justify-content-center mt-5">
      <div class='col-md-6'>
        <div class="card m-3">
          <img class="card-top" src='<%= project.p%>'>
          <div class="card-body">
            <h6 class="card-subtitle text-muted mb-2">
              Owner: <%=project.userName%>
            </h6>
            <h2 class="card-title">
              <%= project.projectName %>
            </h2>
            <p class="card-text">
              <%= project.dueDate %>
            </p>
          </div>
          <div class="card-footer d-flex justify-content-between align-items-center">
            <form class="" action="/project<%= project.id %>?_method=PUT" method="POST">
              <button class="btn btn-primary fa fa-heart" type="submit"></button>
            </form>
            <p class="card-text text-muted mb-0">Likes: <%= post.likes %>
            </p>
            <%if(project.user==user.id){ %>
              <form action="/post/deleteProject/<%= project.id %>?_method=DELETE" method="POST"
                class="d-flex justify-content-end">
                <button class="btn btn-primary fa fa-trash" type="submit"></button>
              </form>
              <%}%>
          </div>
        </div>
      </div>
      <div class="col-md-6 my-4">
        <h5>Notes:</h5>
        <div class="card-group flex-column">
          <% Notes.forEach(Notes=> { %>
            <div class="card my-2 p-3">
              <h6 class="card-subtitle text-muted">
                <%= task.userName %> says:
              </h6>
              <p class="card-text">
                <%= Notes.Notes %>
              </p>
            </div>
            <% }) %>
              <div class="card my-2 p-3">
                <h5 class="card-title">Add a Note:</h5>

